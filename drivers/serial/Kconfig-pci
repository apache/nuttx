	int "16550 UART3 PCI parity"
	default 0
	range 0 2
	---help---
		16550 UART3 PCI parity.  0=None, 1=Odd, 2=Even.  Default: None

config 16550_PCI_UART3_BITS
	int "16550 UART3 PCI number of bits"
	default 8
	---help---
		16550 UART3 PCI number of bits.  Default: 8

