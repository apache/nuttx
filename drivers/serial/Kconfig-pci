	int "16550 UART3 PCI two stop bits"
	default 0
	---help---
		0=1 stop bit, 1=Two stop bits.  Default: 1 stop bit

config 16550_PCI_UART3_RXBUFSIZE
	int "16550 UART3 PCI Rx buffer size"
	default 256
	---help---
