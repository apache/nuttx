	bool "UART4"
	default n
	select ARCH_HAVE_UART4
	---help---
		Support UART4

config KL_UART5
	bool "UART5"
	default n
	select ARCH_HAVE_UART5
	---help---
		Support UART5

config KL_ENET
	bool "Ethernet"
	default n
	depends on ARCH_FAMILY_K60
	select NET
	---help---
		Support Ethernet (K60 only)

