	bool "STM32F373CB"
	select ARCH_CORTEXM4
	select STM32_STM32F37XX
	select ARCH_HAVE_FPU

config ARCH_CHIP_STM32F373RB
	bool "STM32F373RB"
	select ARCH_CORTEXM4
	select STM32_STM32F37XX
	select ARCH_HAVE_FPU

