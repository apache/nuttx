config SAMDL_HAVE_SPI
	bool
	select SPI

if SAMDL_HAVE_SPI

config SAMDL_SPI_REGDEBUG
	bool "SPI register-Level Debug"
	default n
	depends on DEBUG_SPI
	---help---
		Enable very low-level register access debug.  Depends on DEBUG_SPI.

endif # SAMDL_HAVE_SPI
