config SSI0_DISABLE
	bool "Disable SSI0"
	default y

config SSI1_DISABLE
	bool "Disable SSI1"
	default y

config TIVA_ETHERNET
	bool "Ethernet"
	default n
	select NETDEVICES
	---help---
		This must be set (along with NET) to build the Stellaris Ethernet driver.

config TIVA_FLASH
	bool "Internal FLASH driver"
	default n
	---help---
		Enable MTD driver support for internal FLASH.

endmenu

