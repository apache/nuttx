#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

comment "jh7100 Configuration Options"

config jh7100_ENABLE_DPFPU
	bool "jh7100 DP_FPU Support"
	default n
	select ARCH_HAVE_FPU
	select ARCH_HAVE_DPFPU
	---help---
		Enable the RISC-V Double-Precision Floating Point Unit (DP-FPU).

menu "jh7100 Peripheral Support"

# These "hidden" settings determine whether a peripheral option is available
# for the selected MCU

config jh7100_HAVE_UART0
	bool
	default y
	select UART0_SERIALDRIVER
	select ARCH_HAVE_SERIAL_TERMIOS

# These are the peripheral selections proper

config JH7100_UART0
	bool "UART0"
	default y
	select ARCH_HAVE_UART0
	select ARCH_HAVE_SERIAL_TERMIOS
	select JH7100_UART

endmenu

menu "jh7100 Others"

config JH7100_WITH_QEMU
	bool "qemu support"
	default n

endmenu
