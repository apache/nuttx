#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

comment "HPMicro Configuration Options"

choice
	prompt "HPMicro Chip Selection"
	default ARCH_CHIP_HPM6750

config ARCH_CHIP_HPM6750
	bool "HPM6750"
	select ARCH_RV32
	select ARCH_RV_ISA_M
	select ARCH_RV_ISA_A
	select ARCH_RV_ISA_C
	select ONESHOT
	select ALARM_ARCH

config ARCH_CHIP_HPM6360
	bool "HPM6360"
	select ARCH_RV32
	select ARCH_RV_ISA_M
	select ARCH_RV_ISA_A
	select ARCH_RV_ISA_C
	select ONESHOT
	select ALARM_ARCH

endchoice # ESP32-C3 Chip Selection

if ARCH_CHIP_HPM6750
source "arch/risc-v/src/hpmicro/hpm6750/Kconfig"
endif
