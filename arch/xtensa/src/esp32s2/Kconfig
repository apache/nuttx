config ESP32S2_SPI3_CSPIN
	int "SPI3 CS Pin"
	default 10
	range 0 48

config ESP32S2_SPI3_CLKPIN
	int "SPI3 CLK Pin"
	default 12
	range 0 48

config ESP32S2_SPI3_MOSIPIN
	int "SPI3 MOSI Pin"
	default 11
	range 0 48

config ESP32S2_SPI3_MISOPIN
	int "SPI3 MISO Pin"
	default 13
	range 0 48

