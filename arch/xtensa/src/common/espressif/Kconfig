	bool "Enable I2S receiver"
	default ESP32_I2S0_RX if ESP32_I2S0
	default ESP32S2_I2S_RX if ESP32S2_I2S
	default ESP32S3_I2S0_RX if ESP32S3_I2S0
	default y
	---help---
