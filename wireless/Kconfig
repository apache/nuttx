config WIRELESS
	bool "Wireless Support"
	default n
	---help---
		Enables overall support for Wireless library.

if WIRELESS

source "wireless/bluetooth/Kconfig"
source "wireless/ieee802154/Kconfig"
source "wireless/pktradio/Kconfig"

endif # WIRELESS
