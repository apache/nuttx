GEN_TMP = $(GEN_CSRC:.c=.i)

all: $(GEN_CSRC)
.PHONY : clean distclean

$(GEN_CSRC) : $(DEPENDENCY)
	$(call PREPROCESS, $<, $(GEN_TMP))
	$(Q) cat $(GEN_TMP) | sed -e "/^#/d" >$@
	$(Q) rm -f  $(GEN_TMP)

clean:
	$(call DELFILE, *.i)
	$(call CLEAN)

distclean: clean
	$(call DELFILE, nxfonts_convert_*bpp.c)
	$(call DELFILE, nxfonts_bitmaps_*.c)
