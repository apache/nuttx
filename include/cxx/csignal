{
  using ::sigset_t;
  using ::sig_atomic_t;
  using ::sigval;
  using ::sigevent;
  using ::siginfo;
  using ::siginfo_t;
  using ::sigaction;
  using ::kill;
  using ::raise;
  using ::sigaction;
  using ::sigaddset;
  using ::sigdelset;
  using ::sigemptyset;
  using ::sigfillset;
  using ::sighold;
  using ::sigismember;
  using ::sigignore;
  using ::signal;
  using ::sigpause;
  using ::sigpending;
  using ::sigprocmask;
  using ::sigqueue;
  using ::sigrelse;
  using ::sigset;
  using ::sigtimedwait;
  using ::sigsuspend;
  using ::sigwaitinfo;
}

