#ifndef __INCLUDE_CXX_CSTDDEF
#define __INCLUDE_CXX_CSTDDEF

//***************************************************************************
// Included Files
//***************************************************************************

#include <nuttx/config.h>
#include <nuttx/compiler.h>

#include <stddef.h>

//***************************************************************************
// Namespace
//***************************************************************************

namespace std
{
  // Standard types

  using ::mode_t;
  using ::size_t;
  using ::ssize_t;
  using ::off_t;
  using ::blksize_t;
  using ::blkcnt_t;
  using ::fpos_t;
  using ::uid_t;
  using ::gid_t;
  using ::dev_t;
  using ::ino_t;
  using ::pid_t;

  using ::socklen_t;
  using ::sa_family_t;
#if __cplusplus >= 201103L
  using nullptr_t = decltype(nullptr);
#endif
}

#endif // __INCLUDE_CXX_CSTDDEF
