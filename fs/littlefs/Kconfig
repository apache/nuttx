config FS_LITTLEFS
	bool "LITTLEFS File System"
	default n
	depends on !DISABLE_MOUNTPOINT
	---help---
		Build the LITTLEFS file system. https://github.com/ARMmbed/littlefs.

config LFS_BLOCK_MULTIPLE_FACTOR
	int "LITTLEFS Block size multiple factor"
	default 4
	depends on FS_LITTLEFS

config LFS_BLOCK_CYCLE
	int "LITTLEFS Block Cycle"
	default 200
	depends on FS_LITTLEFS
