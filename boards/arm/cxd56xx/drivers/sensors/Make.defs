endif

ifeq ($(CONFIG_SENSORS_BM1422GMV_SCU),y)
  CSRCS += bm1422gmv_scu.c
endif

ifeq ($(CONFIG_SENSORS_BMI160_SCU),y)
  CSRCS += bmi160_scu.c
endif

ifeq ($(CONFIG_SENSORS_BMP280_SCU),y)
  CSRCS += bmp280_scu.c
endif

ifeq ($(CONFIG_SENSORS_KX022_SCU),y)
