set +e

#include <nuttx/config.h>

#ifdef CONFIG_NSH_PROC_MOUNTPOINT
mount -t procfs CONFIG_NSH_PROC_MOUNTPOINT
#endif

#ifdef CONFIG_FS_TMPFS
mount -t tmpfs CONFIG_LIBC_TMPDIR
#endif

#ifdef CONFIG_FS_LITTLEFS

mount -t littlefs -o autoformat /dev/data /data

#ifdef CONFIG_TESTING_TESTRUNNER
testrunner >/data/testrunner.log &
#endif

#endif

#ifndef CONFIG_NSH_DISABLE_UNAME
uname -a > /dev/syslog
#endif

#ifdef CONFIG_WIRELESS

#ifdef CONFIG_NETDEVICES
ifup CONFIG_MIIO_WIRELESS_STA_NAME
#endif

#ifdef CONFIG_MIIO_CLIENT
miio_client &
#endif

#endif

#ifdef CONFIG_BT

zblue

#ifdef CONFIG_BT_TESTER
bttester &
#endif /* CONFIG_BT_TESTER */

#endif /* CONFIG_BT */
