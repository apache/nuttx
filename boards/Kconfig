	bool "Motorola Mods Development Kit (MDK)"
	depends on ARCH_CHIP_STM32L476RG
	select ARCH_HAVE_LEDS
	select ARCH_HAVE_BUTTONS
	select ARCH_HAVE_IRQBUTTONS
	---help---
