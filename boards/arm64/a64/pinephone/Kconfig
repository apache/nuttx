#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

if ARCH_BOARD_PINEPHONE

config PINEPHONE_LCD
	bool "LCD Display"
	default n
	select A64_DE
	select A64_RSB
	select DRIVERS_VIDEO
	select VIDEO_FB
	select FB_OVERLAY
	select FB_UPDATE
	---help---
		Select to enable support for LCD Display.

config PINEPHONE_MODEM
	bool "LTE Modem"
	default n
	---help---
		Select to enable support for Quectel EG25-G LTE Modem.

endif # ARCH_BOARD_PINEPHONE
